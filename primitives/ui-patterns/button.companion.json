{
  "name": "button",
  "version": "1.0.0",
  "category": "ui-patterns",
  "description": "Interactive button element",
  
  "bindings": {
    "paddingX": "--pm-space-padding-{index}",
    "paddingY": "--pm-space-padding-{index}",
    "fontSize": "--pm-type-size-{index}",
    "fontWeight": "--pm-type-weight-{index}",
    "background": "--pm-{color}-base-{index}",
    "hoverBackground": "--pm-{color}-vivid-{index}",
    "activeBackground": "--pm-{color}-shade-{index}",
    "disabledBackground": "--pm-{color}-mute-{index}",
    "textColor": "--pm-{color}-base-{index}",
    "borderWidth": "--pm-border-w-{index}",
    "borderRadius": "--pm-border-radius-{index}",
    "shadow": "--pm-fx-shadow-blur-{index}",
    "transition": "--pm-motion-dur-{index}"
  },
  
  "behaviors": {
    "states": ["default", "hover", "active", "focus", "disabled"],
    "variants": ["solid", "outline", "ghost", "link"],
    "sizes": ["xs", "sm", "md", "lg", "xl"]
  },
  
  "constraints": {
    "indexRange": "000-255"
  },
  
  "accessibility": {
    "role": "button",
    "aria": ["aria-pressed", "aria-disabled", "aria-label"]
  },
  
  "relationships": ["form", "modal", "toolbar"]
}
