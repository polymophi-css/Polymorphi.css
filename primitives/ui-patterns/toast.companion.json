{
  "name": "toast",
  "version": "1.0.0",
  "category": "ui-patterns",
  "description": "Toast notification",
  "bindings": {
    "padding": "--pm-space-padding-{index}",
    "background": "--pm-{color}-base-{index}",
    "textColor": "--pm-{color}-base-{index}",
    "borderRadius": "--pm-border-radius-{index}",
    "shadow": "--pm-fx-shadow-blur-{index}",
    "enterAnim": "--pm-anim-preset-slide-in-right",
    "exitAnim": "--pm-anim-preset-fade-out",
    "duration": "--pm-motion-dur-{index}"
  },
  "behaviors": {
    "position": [
      "top-right",
      "top-left",
      "bottom-right",
      "bottom-left"
    ],
    "autoDismiss": "configurable"
  },
  "constraints": {
    "indexRange": "000-255"
  },
  "accessibility": {
    "role": "alert",
    "aria": [
      "aria-live"
    ]
  },
  "relationships": [
    "alert",
    "progress"
  ]
}