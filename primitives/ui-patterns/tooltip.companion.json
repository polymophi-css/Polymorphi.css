{
  "name": "tooltip",
  "version": "1.0.0",
  "category": "ui-patterns",
  "description": "Tooltip popup",
  "bindings": {
    "padding": "--pm-space-padding-{index}",
    "fontSize": "--pm-type-size-{index}",
    "background": "--pm-{color}-shade-{index}",
    "textColor": "--pm-{color}-base-{index}",
    "borderRadius": "--pm-border-radius-{index}",
    "shadow": "--pm-fx-shadow-blur-{index}",
    "delay": "--pm-motion-delay-{index}",
    "transition": "--pm-motion-dur-{index}"
  },
  "behaviors": {
    "position": [
      "top",
      "bottom",
      "left",
      "right"
    ],
    "trigger": "hover"
  },
  "constraints": {
    "indexRange": "000-255"
  },
  "accessibility": {
    "role": "tooltip"
  },
  "relationships": [
    "button",
    "icon",
    "label"
  ]
}