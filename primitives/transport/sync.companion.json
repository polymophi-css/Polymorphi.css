{
  "name": "sync",
  "version": "1.0.0",
  "category": "transport",
  "description": "Synchronization controls",
  "bindings": {
    "color": "--pm-{color}-base-{index}",
    "activeColor": "--pm-grn-vivid-{index}",
    "size": "--pm-size-w-{index}"
  },
  "behaviors": {
    "mode": [
      "internal",
      "midiClock",
      "mtc",
      "smpte",
      "ableton"
    ],
    "role": [
      "master",
      "slave"
    ]
  },
  "constraints": {
    "indexRange": "000-255"
  },
  "accessibility": {
    "role": "group"
  },
  "relationships": [
    "transport",
    "tempo",
    "external"
  ]
}