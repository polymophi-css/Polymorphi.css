{
  "name": "arrangement",
  "version": "1.0.0",
  "category": "layout",
  "description": "Timeline arrangement view",
  "bindings": {
    "trackHeight": "--pm-size-h-{index}",
    "rulerHeight": "--pm-size-h-{index}",
    "background": "--pm-{color}-shade-{index}",
    "gridColor": "--pm-{color}-mute-{index}",
    "playheadColor": "--pm-{color}-vivid-{index}",
    "selectionColor": "--pm-{color}-alpha-{index}"
  },
  "behaviors": {
    "scroll": "both",
    "zoom": "both",
    "snap": "grid"
  },
  "constraints": {
    "indexRange": "000-255"
  },
  "accessibility": {
    "role": "application"
  },
  "relationships": [
    "transport",
    "waveform",
    "clip",
    "locate"
  ]
}