{
  "name": "mixer-section",
  "version": "1.0.0",
  "category": "layout",
  "description": "Mixer view layout",
  "bindings": {
    "width": "--pm-size-w-{index}",
    "height": "--pm-size-h-{index}",
    "background": "--pm-{color}-shade-{index}",
    "dividerColor": "--pm-{color}-mute-{index}",
    "channelWidth": "--pm-size-w-{index}",
    "gap": "--pm-space-gap-{index}"
  },
  "behaviors": {
    "scroll": "horizontal",
    "zoom": "channel-width"
  },
  "constraints": {
    "indexRange": "000-255"
  },
  "accessibility": {
    "role": "region"
  },
  "relationships": [
    "channel-strip",
    "master-section",
    "bus"
  ]
}