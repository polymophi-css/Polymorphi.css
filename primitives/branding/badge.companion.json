{
  "name": "badge",
  "version": "1.0.0",
  "category": "branding",
  "description": "Badge and tag element",
  "bindings": {
    "paddingX": "--pm-space-padding-{index}",
    "paddingY": "--pm-space-padding-{index}",
    "fontSize": "--pm-type-size-{index}",
    "background": "--pm-{color}-base-{index}",
    "textColor": "--pm-{color}-base-{index}",
    "borderRadius": "--pm-border-radius-{index}"
  },
  "behaviors": {
    "variant": [
      "solid",
      "outline",
      "subtle"
    ]
  },
  "constraints": {
    "indexRange": "000-255"
  },
  "accessibility": {
    "role": "status"
  },
  "relationships": [
    "card",
    "list",
    "table"
  ]
}