{
  "name": "knob",
  "version": "1.0.0",
  "category": "controllers",
  "description": "Rotary control for continuous parameter adjustment",
  
  "bindings": {
    "rotation": "--pm-aud-knob-{index}",
    "size": "--pm-size-w-{index}",
    "background": "--pm-{color}-base-{index}",
    "indicator": "--pm-{color}-vivid-{index}",
    "shadow": "--pm-fx-shadow-blur-{index}",
    "border": "--pm-border-w-{index}",
    "borderRadius": "--pm-border-radius-{index}",
    "transition": "--pm-motion-dur-{index}"
  },
  
  "behaviors": {
    "drag": ["vertical", "circular"],
    "doubleClick": "reset",
    "scrollWheel": "increment",
    "shiftModifier": "fine",
    "ctrlModifier": "snap"
  },
  
  "constraints": {
    "indexRange": "000-255",
    "midiCompatible": "000-127"
  },
  
  "accessibility": {
    "role": "slider",
    "aria": ["aria-valuenow", "aria-valuemin", "aria-valuemax", "aria-label"]
  },
  
  "relationships": ["channel", "parameter", "automation"]
}
