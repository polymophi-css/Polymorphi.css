{
  "name": "toggle",
  "version": "1.0.0",
  "category": "forms",
  "description": "Toggle switch",
  "bindings": {
    "width": "--pm-size-w-{index}",
    "height": "--pm-size-h-{index}",
    "trackBackground": "--pm-{color}-shade-{index}",
    "activeBackground": "--pm-{color}-vivid-{index}",
    "thumbColor": "--pm-wht-base-{index}",
    "borderRadius": "--pm-border-radius-{index}",
    "transition": "--pm-motion-dur-{index}"
  },
  "behaviors": {
    "states": [
      "off",
      "on"
    ]
  },
  "constraints": {
    "indexRange": "000-255"
  },
  "accessibility": {
    "role": "switch",
    "aria": [
      "aria-checked"
    ]
  },
  "relationships": [
    "label",
    "form"
  ]
}