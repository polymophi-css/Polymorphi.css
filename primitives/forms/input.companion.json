{
  "name": "input",
  "version": "1.0.0",
  "category": "forms",
  "description": "Text input field",
  "bindings": {
    "height": "--pm-size-h-{index}",
    "padding": "--pm-space-padding-{index}",
    "fontSize": "--pm-type-size-{index}",
    "background": "--pm-{color}-shade-{index}",
    "textColor": "--pm-{color}-base-{index}",
    "placeholderColor": "--pm-{color}-mute-{index}",
    "borderWidth": "--pm-border-w-{index}",
    "borderColor": "--pm-{color}-mute-{index}",
    "focusBorderColor": "--pm-{color}-vivid-{index}",
    "borderRadius": "--pm-border-radius-{index}",
    "transition": "--pm-motion-dur-{index}"
  },
  "behaviors": {
    "states": [
      "default",
      "focus",
      "error",
      "disabled"
    ]
  },
  "constraints": {
    "indexRange": "000-255"
  },
  "accessibility": {
    "role": "textbox",
    "aria": [
      "aria-invalid",
      "aria-describedby"
    ]
  },
  "relationships": [
    "label",
    "form"
  ]
}